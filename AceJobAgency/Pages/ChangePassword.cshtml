@page
@model AceJobAgency.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password - Ace Job Agency";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary-color: #4F46E5;
            --primary-hover: #4338CA;
            --warning-color: #F59E0B;
            --warning-hover: #D97706;
            --error-color: #EF4444;
            --success-color: #10B981;
            --info-color: #3B82F6;
            --text-dark: #1F2937;
            --text-muted: #6B7280;
            --border-color: #E5E7EB;
            --bg-light: #F9FAFB;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', sans-serif;
            margin: 0;
            min-height: 100vh;
            display: flex;
        }

        .password-container {
            display: flex;
            width: 100%;
            min-height: 100vh;
        }

        /* Left side - Visual */
        .visual-section {
            flex: 1;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 3rem;
            overflow: hidden;
        }

            .visual-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-image: linear-gradient(30deg, rgba(255, 255, 255, 0.05) 12%, transparent 12.5%, transparent 87%, rgba(255, 255, 255, 0.05) 87.5%, rgba(255, 255, 255, 0.05)), linear-gradient(150deg, rgba(255, 255, 255, 0.05) 12%, transparent 12.5%, transparent 87%, rgba(255, 255, 255, 0.05) 87.5%, rgba(255, 255, 255, 0.05)), linear-gradient(30deg, rgba(255, 255, 255, 0.05) 12%, transparent 12.5%, transparent 87%, rgba(255, 255, 255, 0.05) 87.5%, rgba(255, 255, 255, 0.05)), linear-gradient(150deg, rgba(255, 255, 255, 0.05) 12%, transparent 12.5%, transparent 87%, rgba(255, 255, 255, 0.05) 87.5%, rgba(255, 255, 255, 0.05));
                background-size: 80px 140px;
                background-position: 0 0, 0 0, 40px 70px, 40px 70px;
                opacity: 0.3;
            }

        .visual-content {
            position: relative;
            z-index: 2;
            width: 100%;
            color: white;
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .visual-icon {
            font-size: 8rem;
            margin-bottom: 1rem;
            opacity: 0.9;
        }

        .visual-title {
            font-size: 4rem;
            font-weight: 700;
            line-height: 1.2;
        }

        /* Right side - Form */
        .form-section {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            background: #FFFFFF;
        }

        .password-form-container {
            width: 100%;
            max-width: 520px;
            max-height: 90vh;
            overflow-y: auto;
        }

            .password-form-container::-webkit-scrollbar {
                width: 6px;
            }

            .password-form-container::-webkit-scrollbar-track {
                background: transparent;
            }

            .password-form-container::-webkit-scrollbar-thumb {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                border-radius: 10px;
            }

                .password-form-container::-webkit-scrollbar-thumb:hover {
                    background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
                }

        .form-header {
            margin-bottom: 2rem;
        }

        .form-title {
            font-size: 1.875rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
        }

        .form-subtitle {
            font-size: 0.95rem;
            color: var(--text-muted);
        }

        .alert-danger {
            background: #FEE2E2;
            color: #991B1B;
            border: 1px solid #FECACA;
            border-radius: 0.5rem;
            padding: 1rem;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: block;
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
        }

        .form-input {
            width: 100%;
            padding: 0.875rem 1rem;
            border: 2px solid var(--border-color);
            border-radius: 0.5rem;
            font-size: 1rem;
            transition: all 0.2s ease;
            background: #FFFFFF;
        }

            .form-input:focus {
                outline: none;
                border-color: var(--warning-color);
                box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.1);
            }

        .text-muted {
            color: var(--text-muted);
            font-size: 0.825rem;
            margin-top: 0.375rem;
            display: block;
        }

        .text-danger {
            color: var(--error-color);
            font-size: 0.85rem;
            margin-top: 0.375rem;
            display: block;
        }

        .password-strength {
            margin-top: 0.75rem;
        }

        .progress-bar {
            height: 6px;
            background-color: var(--bg-light);
            border-radius: 3px;
            overflow: hidden;
            margin-bottom: 0.5rem;
        }

        .progress-fill {
            height: 100%;
            transition: all 0.3s ease;
            border-radius: 3px;
        }

        .strength-weak {
            background-color: var(--error-color);
        }

        .strength-medium {
            background-color: var(--warning-color);
        }

        .strength-good {
            background-color: var(--info-color);
        }

        .strength-strong {
            background-color: var(--success-color);
        }

        .strength-text {
            font-size: 0.875rem;
            font-weight: 600;
            display: block;
        }

            .strength-text.text-danger {
                color: var(--error-color);
            }

            .strength-text.text-warning {
                color: var(--warning-color);
            }

            .strength-text.text-info {
                color: var(--info-color);
            }

            .strength-text.text-success {
                color: var(--success-color);
            }

        .policy-card {
            background: var(--bg-light);
            border-radius: 0.75rem;
            padding: 1.25rem;
            margin-bottom: 1.5rem;
            border: 1px solid var(--border-color);
        }

            .policy-card strong {
                color: var(--text-dark);
                font-size: 0.9rem;
                display: block;
                margin-bottom: 0.75rem;
            }

            .policy-card ul {
                margin: 0;
                padding: 0;
                list-style: none;
            }

            .policy-card li {
                color: var(--text-muted);
                font-size: 0.875rem;
                margin-bottom: 0.5rem;
                line-height: 1.5;
                padding-left: 1.5rem;
                position: relative;
            }

                .policy-card li::before {
                    content: "•";
                    position: absolute;
                    left: 0;
                    color: var(--info-color);
                    font-weight: bold;
                    font-size: 1.2rem;
                }

                .policy-card li:last-child {
                    margin-bottom: 0;
                }

        .btn-warning {
            width: 100%;
            padding: 0.875rem;
            background: linear-gradient(135deg, var(--warning-color) 0%, var(--warning-hover) 100%);
            color: white;
            border: none;
            border-radius: 0.5rem;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
            margin-bottom: 1rem;
        }

            .btn-warning:hover {
                transform: translateY(-1px);
                box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            }

            .btn-warning:active {
                transform: translateY(1px);
            }

        .btn-secondary {
            width: 100%;
            padding: 0.875rem;
            background: white;
            color: var(--text-dark);
            border: 2px solid var(--border-color);
            border-radius: 0.5rem;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

            .btn-secondary:hover {
                background: var(--bg-light);
                border-color: var(--text-muted);
                color: var(--text-dark);
            }

        /* Responsive Design */
        @@media (max-width: 992px) {
            .password-container {
                flex-direction: column;
            }

            .visual-section {
                min-height: 30vh;
                padding: 2rem;
            }

            .visual-icon {
                font-size: 6rem;
            }

            .visual-title {
                font-size: 3rem;
            }

            .form-section {
                min-height: 70vh;
            }
        }

        @@media (max-width: 576px) {
            .visual-section {
                padding: 1.5rem;
            }

            .visual-icon {
                font-size: 5rem;
            }

            .visual-title {
                font-size: 2.5rem;
            }

            .form-section {
                padding: 1.5rem;
            }

            .form-title {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="password-container">
        <!-- Left side - Visual -->
        <div class="visual-section">
            <div class="visual-content">
                <div class="visual-icon">
                    <i class="fas fa-key"></i>
                </div>
                <h1 class="visual-title">Secure your account</h1>
            </div>
        </div>

        <!-- Right side - Form -->
        <div class="form-section">
            <div class="password-form-container">
                <div class="form-header">
                    <h2 class="form-title">Change Password</h2>
                    <p class="form-subtitle">Update your password to keep your account secure</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.ForceChangeMessage))
                {
                    <div class="alert-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>@Model.ForceChangeMessage</span>
                    </div>
                }

                <form method="post">
                    <div asp-validation-summary="All" class="alert-danger"></div>

                    <div class="form-group">
                        <label asp-for="CInput.CurrentPassword" class="form-label"></label>
                        <input asp-for="CInput.CurrentPassword" type="password" class="form-input" />
                        <span asp-validation-for="CInput.CurrentPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CInput.NewPassword" class="form-label"></label>
                        <input asp-for="CInput.NewPassword" type="password" class="form-input" id="newPassword" />
                        <span asp-validation-for="CInput.NewPassword" class="text-danger"></span>
                        <small class="text-muted">Min 12 characters with uppercase, lowercase, number & special character</small>

                        <div class="password-strength" id="passwordStrength" style="display: none;">
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: 0%"></div>
                            </div>
                            <span class="strength-text"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="CInput.ConfirmNewPassword" class="form-label"></label>
                        <input asp-for="CInput.ConfirmNewPassword" type="password" class="form-input" />
                        <span asp-validation-for="CInput.ConfirmNewPassword" class="text-danger"></span>
                    </div>

                    <div class="policy-card">
                        <strong>Password Policy:</strong>
                        <ul>
                            <li>Cannot reuse last 2 passwords</li>
                            <li>Must wait 24 hours between changes</li>
                            <li>Password expires after 90 days</li>
                        </ul>
                    </div>

                    <button type="submit" class="btn-warning">
                        <i class="fas fa-key"></i> Change Password
                    </button>

                    <a asp-page="/Index" class="btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                </form>
            </div>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />

    <script>
        // Password strength meter
        const passwordInput = document.getElementById('newPassword');
        const strengthContainer = document.getElementById('passwordStrength');
        const progressFill = strengthContainer.querySelector('.progress-fill');
        const strengthText = strengthContainer.querySelector('.strength-text');

        passwordInput.addEventListener('input', function() {
            const password = this.value;

            if (password.length === 0) {
                strengthContainer.style.display = 'none';
                return;
            }

            strengthContainer.style.display = 'block';

            let strength = 0;
            if (password.length >= 12) strength += 25;
            if (/[a-z]/.test(password)) strength += 25;
            if (/[A-Z]/.test(password)) strength += 25;
            if (/[0-9]/.test(password)) strength += 12.5;
            if (/[^a-zA-Z0-9]/.test(password)) strength += 12.5;

            progressFill.style.width = strength + '%';

            progressFill.className = 'progress-fill';
            strengthText.className = 'strength-text';

            if (strength < 50) {
                progressFill.classList.add('strength-weak');
                strengthText.classList.add('text-danger');
                strengthText.textContent = 'Weak';
            } else if (strength < 75) {
                progressFill.classList.add('strength-medium');
                strengthText.classList.add('text-warning');
                strengthText.textContent = 'Medium';
            } else if (strength < 100) {
                progressFill.classList.add('strength-good');
                strengthText.classList.add('text-info');
                strengthText.textContent = 'Good';
            } else {
                progressFill.classList.add('strength-strong');
                strengthText.classList.add('text-success');
                strengthText.textContent = 'Strong';
            }
        });
    </script>
</body>
</html>
