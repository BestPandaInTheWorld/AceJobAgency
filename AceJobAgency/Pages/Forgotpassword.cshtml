@page
@model AceJobAgency.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password - Ace Job Agency";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary-color: #4F46E5;
            --primary-hover: #4338CA;
            --text-dark: #1F2937;
            --text-muted: #6B7280;
            --border-color: #E5E7EB;
            --error-color: #EF4444;
            --success-color: #10B981;
            --bg-light: #F9FAFB;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', sans-serif;
            margin: 0;
            min-height: 100vh;
            display: flex;
        }

        .forgot-container {
            display: flex;
            width: 100%;
            min-height: 100vh;
        }

        /* Left side - Visual */
        .visual-section {
            flex: 1;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 3rem;
            overflow: hidden;
        }

            .visual-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-image: linear-gradient(30deg, rgba(255, 255, 255, 0.05) 12%, transparent 12.5%, transparent 87%, rgba(255, 255, 255, 0.05) 87.5%, rgba(255, 255, 255, 0.05)), linear-gradient(150deg, rgba(255, 255, 255, 0.05) 12%, transparent 12.5%, transparent 87%, rgba(255, 255, 255, 0.05) 87.5%, rgba(255, 255, 255, 0.05)), linear-gradient(30deg, rgba(255, 255, 255, 0.05) 12%, transparent 12.5%, transparent 87%, rgba(255, 255, 255, 0.05) 87.5%, rgba(255, 255, 255, 0.05)), linear-gradient(150deg, rgba(255, 255, 255, 0.05) 12%, transparent 12.5%, transparent 87%, rgba(255, 255, 255, 0.05) 87.5%, rgba(255, 255, 255, 0.05));
                background-size: 80px 140px;
                background-position: 0 0, 0 0, 40px 70px, 40px 70px;
                opacity: 0.3;
            }

        .visual-content {
            position: relative;
            z-index: 2;
            width: 100%;
            color: white;
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .visual-icon {
            font-size: 8rem;
            margin-bottom: 1rem;
            opacity: 0.9;
        }

        .visual-title {
            font-size: 4rem;
            font-weight: 700;
            line-height: 1.2;
        }

        /* Right side - Form */
        .form-section {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            background: #FFFFFF;
        }

        .forgot-form-container {
            width: 100%;
            max-width: 440px;
        }

        .form-header {
            margin-bottom: 2rem;
        }

        .form-title {
            font-size: 1.875rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
        }

        .form-subtitle {
            font-size: 0.95rem;
            color: var(--text-muted);
            line-height: 1.6;
        }

        .alert-box {
            padding: 1rem;
            border-radius: 0.5rem;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
        }

        .alert-success {
            background: #D1FAE5;
            color: #065F46;
            border: 1px solid #A7F3D0;
        }

        .alert-danger {
            background: #FEE2E2;
            color: #991B1B;
            border: 1px solid #FECACA;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
        }

        .input-wrapper {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            font-size: 1.125rem;
            pointer-events: none;
        }

        .form-input {
            width: 100%;
            padding: 0.875rem 1rem 0.875rem 2.75rem;
            border: 2px solid var(--border-color);
            border-radius: 0.5rem;
            font-size: 1rem;
            transition: all 0.2s ease;
            background: #FFFFFF;
        }

            .form-input:focus {
                outline: none;
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
            }

            .form-input::placeholder {
                color: #9CA3AF;
            }

        .text-danger {
            color: var(--error-color);
            font-size: 0.85rem;
            margin-top: 0.375rem;
            display: block;
        }

        .text-muted {
            color: var(--text-muted);
            font-size: 0.85rem;
            margin-top: 0.375rem;
            display: block;
        }

        .info-card {
            background: var(--bg-light);
            border-radius: 0.75rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            border: 1px solid var(--border-color);
        }

            .info-card p {
                margin: 0;
                color: var(--text-muted);
                font-size: 0.875rem;
                line-height: 1.6;
            }

        .btn-primary {
            width: 100%;
            padding: 0.875rem;
            background: var(--primary-color);
            color: white;
            border: none;
            border-radius: 0.5rem;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
            margin-bottom: 1rem;
        }

            .btn-primary:hover {
                background: var(--primary-hover);
                box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            }

            .btn-primary:active {
                transform: translateY(1px);
            }

            .btn-primary:disabled {
                opacity: 0.6;
                cursor: not-allowed;
            }

        .btn-secondary {
            width: 100%;
            padding: 0.875rem;
            background: white;
            color: var(--text-dark);
            border: 2px solid var(--border-color);
            border-radius: 0.5rem;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

            .btn-secondary:hover {
                background: var(--bg-light);
                border-color: var(--text-muted);
                color: var(--text-dark);
            }

        .divider {
            margin: 1.5rem 0;
            text-align: center;
            position: relative;
        }

            .divider::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 0;
                right: 0;
                height: 1px;
                background: var(--border-color);
            }

            .divider span {
                position: relative;
                background: white;
                padding: 0 1rem;
                color: var(--text-muted);
                font-size: 0.875rem;
            }

        .form-links {
            text-align: center;
            font-size: 0.9rem;
            color: var(--text-muted);
        }

        .form-link {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 600;
            transition: color 0.2s ease;
        }

            .form-link:hover {
                color: var(--primary-hover);
                text-decoration: underline;
            }

        .code-input {
            text-align: center;
            font-family: 'Courier New', monospace;
            font-size: 1.5rem;
            font-weight: 700;
            letter-spacing: 0.5rem;
            padding-left: 1rem !important;
        }

        /* Responsive Design */
        @@media (max-width: 992px) {
            .forgot-container {
                flex-direction: column;
            }

            .visual-section {
                min-height: 40vh;
                padding: 2rem;
            }

            .visual-icon {
                font-size: 6rem;
            }

            .visual-title {
                font-size: 3rem;
            }

            .form-section {
                min-height: 60vh;
            }
        }

        @@media (max-width: 576px) {
            .visual-section {
                padding: 1.5rem;
            }

            .visual-icon {
                font-size: 5rem;
            }

            .visual-title {
                font-size: 2.5rem;
            }

            .form-section {
                padding: 1.5rem;
            }

            .form-title {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="forgot-container">
        <!-- Left side - Visual -->
        <div class="visual-section">
            <div class="visual-content">
                <div class="visual-icon">
                    <i class="fas fa-lock"></i>
                </div>
                <h1 class="visual-title">Reset password</h1>
            </div>
        </div>

        <!-- Right side - Form -->
        <div class="form-section">
            <div class="forgot-form-container">
                <div class="form-header">
                    <h2 class="form-title">Forgot your password?</h2>
                    <p class="form-subtitle">
                        @if (ViewData["ShowPasswordForm"] != null && (bool)ViewData["ShowPasswordForm"])
                        {
                            <text>Code verified! Now enter your new password.</text>
                        }
                        else if (ViewData["ShowResetForm"] != null && (bool)ViewData["ShowResetForm"])
                        {
                            <text>Enter the 6-digit code sent to your email.</text>
                        }
                        else
                        {
                            <text>Enter your email address and we'll send you instructions to reset your password.</text>
                        }
                    </p>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert-box alert-success">
                        <i class="fas fa-check-circle"></i>
                        <span>@TempData["SuccessMessage"]</span>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert-box alert-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>@TempData["ErrorMessage"]</span>
                    </div>
                }

                <form method="post" id="forgotPasswordForm">
                    @if (!ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                    {
                        <div asp-validation-summary="ModelOnly" class="alert-box alert-danger"></div>
                    }

                    @if (ViewData["ShowPasswordForm"] != null && (bool)ViewData["ShowPasswordForm"])
                    {
                        <!-- Step 3: Password Reset Form -->
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="ResetCode" />

                        <div class="form-group">
                            <label asp-for="NewPassword" class="form-label">New Password</label>
                            <div class="input-wrapper">
                                <i class="fas fa-lock input-icon"></i>
                                <input asp-for="NewPassword" class="form-input" type="password"
                                       id="newPasswordInput" placeholder="Enter new password" required autofocus />
                            </div>
                            @if (!ModelState.IsValid && ModelState["NewPassword"]?.Errors.Count > 0)
                            {
                                <span class="text-danger">@ModelState["NewPassword"].Errors[0].ErrorMessage</span>
                            }
                            <small class="text-muted">Min 12 characters with uppercase, lowercase, number & special character</small>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <div class="input-wrapper">
                                <i class="fas fa-lock input-icon"></i>
                                <input asp-for="ConfirmPassword" class="form-input" type="password"
                                       placeholder="Confirm new password" required />
                            </div>
                            @if (!ModelState.IsValid && ModelState["ConfirmPassword"]?.Errors.Count > 0)
                            {
                                <span class="text-danger">@ModelState["ConfirmPassword"].Errors[0].ErrorMessage</span>
                            }
                        </div>

                        <button type="submit" class="btn-primary">
                            <i class="fas fa-check"></i> Reset Password
                        </button>

                        <a href="/ForgotPassword" class="btn-secondary">
                            <i class="fas fa-arrow-left"></i> Start Over
                        </a>
                    }
                    else if (ViewData["ShowResetForm"] != null && (bool)ViewData["ShowResetForm"])
                    {
                        <!-- Step 2: Reset Code Verification -->
                        <input type="hidden" asp-for="Email" />

                        <div class="form-group">
                            <label asp-for="ResetCode" class="form-label">Reset Code</label>
                            <div class="input-wrapper">
                                <i class="fas fa-key input-icon"></i>
                                <input asp-for="ResetCode" class="form-input code-input"
                                       type="text" maxlength="6" pattern="[0-9]{6}" placeholder="000000"
                                       required autofocus style="text-align: center; font-family: 'Courier New', monospace; font-size: 1.5rem; letter-spacing: 0.5rem;" />
                            </div>
                            @if (!ModelState.IsValid && ModelState["ResetCode"]?.Errors.Count > 0)
                            {
                                <span class="text-danger">@ModelState["ResetCode"].Errors[0].ErrorMessage</span>
                            }
                            <small class="text-muted">Enter the 6-digit code sent to @ViewData["UserEmail"]</small>
                        </div>

                        <div class="info-card">
                            <p>
                                <i class="fas fa-info-circle"></i> The code will expire in 10 minutes. Didn't receive it? Request a new one below.
                            </p>
                        </div>

                        <button type="submit" class="btn-primary">
                            <i class="fas fa-check-circle"></i> Verify Code
                        </button>

                        <a href="/ForgotPassword" class="btn-secondary">
                            <i class="fas fa-redo"></i> Request New Code
                        </a>
                    }
                    else
                    {
                        <!-- Email Input -->
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <div class="input-wrapper">
                                <i class="fas fa-envelope input-icon"></i>
                                <input asp-for="Email" class="form-input" type="email"
                                       placeholder="your.email@example.com" required autofocus />
                            </div>
                            @if (!ModelState.IsValid && ModelState["Email"]?.Errors.Count > 0)
                            {
                                <span class="text-danger">@ModelState["Email"].Errors[0].ErrorMessage</span>
                            }
                        </div>

                        <div class="info-card">
                            <p>
                                If an account exists with this email address, you will receive a 6-digit reset code within a few minutes.
                            </p>
                        </div>

                        <button type="submit" class="btn-primary" id="submitBtn">
                            <i class="fas fa-paper-plane"></i> Send Reset Code
                        </button>

                        <a asp-page="/Login" class="btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Login
                        </a>

                        <div class="divider">
                            <span>OR</span>
                        </div>

                        <div class="form-links">
                            <p style="margin: 0;">
                                Don't have an account?
                                <a asp-page="/Register" class="form-link">Create one now</a>
                            </p>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Code input validation - only numbers
        const codeInput = document.querySelector('input[name="ResetCode"]');
        if (codeInput) {
            codeInput.addEventListener('input', function(e) {
                e.target.value = e.target.value.replace(/[^0-9]/g, '');
            });

            codeInput.addEventListener('paste', function(e) {
                e.preventDefault();
                const pastedText = (e.clipboardData || window.clipboardData).getData('text');
                const numericOnly = pastedText.replace(/[^0-9]/g, '').substring(0, 6);
                e.target.value = numericOnly;
            });
        }
    </script>
</body>
</html>
